@page "/posts/{url}"
@inject BlazorBlog.Client.Services.IPostService PostService

@if (post == null)
{
    <p>Getting post...</p>
}
else
{
    <h3>@post.Title</h3>

    <div>
        @post.Content
    </div>
}

@code {
    private BlazorBlog.Shared.Post post;

    [Parameter]
    public string Url { get; set; }

    protected override async Task OnInitializedAsync()
    {
        post = await PostService.GetPostByUrl(Url);
    }
}
